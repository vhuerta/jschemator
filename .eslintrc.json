{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "key-spacing": ["warn", { "align": "colon" }],
    "operator-linebreak": ["warn", "before"],
    "multiline-ternary": ["warn", "always-multiline"],
    "no-fallthrough": "off"
  }
}
